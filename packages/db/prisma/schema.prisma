generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  createdAt DateTime @default(now())
  player    Player? 
}

model Player {
  id        String   @id @default(uuid())
  userId    String   @unique
  name      String
  x         Int
  y         Int
  hp        Int
  ap        Int
  isAlive   Boolean
  factionId String? 
  updatedAt DateTime @updatedAt

  user      User     @relation(fields: [userId], references: [id])
}

model Item {
  id        String   @id @default(uuid())
  name      String
  type      String
  playerId  String?
  durability Int
}

model Faction {
  id          String   @id @default(uuid())
  name        String   @unique
  description String
  createdBy   String
}